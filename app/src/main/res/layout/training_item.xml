<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <!--    cornerRadius - zaokraglenie rogów
        cardElevation - podniesienie elementu, żeby stworzyć za nim cien-->

    <RelativeLayout

        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#2C2A2A">

        <TextView
            android:id="@+id/txtActivityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Activity Name"
            android:textColor="#FFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgActivity"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_below="@id/txtActivityName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txtShortDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgActivity"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:text="Short Description"
            android:textStyle="italic"
            android:textColor="#FFFF"
            android:visibility="gone"/>


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>